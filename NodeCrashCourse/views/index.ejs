<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/nav.ejs') %>

    <div class="Blog content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blogs => { %>

                <h3 class="title"><%= blogs.title %></h3>
                <p class="snippet"><%= blogs.snippet %></p>

            <% }) %>
        <% } else { %>
            <p>There are not blogs to display....</p>
        <% } %>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>

</html>